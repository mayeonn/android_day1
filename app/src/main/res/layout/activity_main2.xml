<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1B9B9"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#3F51B5"
        android:text="My Cafe"
        android:textColor="#F8F8F8"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="아메리카노 (1000원)"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/americano"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:background="#F3B9B9"
        android:backgroundTint="#F3B9B9"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="카페라떼 (1500원)"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/latte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3B9B9"
        android:backgroundTint="#F3B9B9"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="카페모카 (1700원)"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/mocha"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:background="#F3B9B9"
        android:backgroundTint="#F3B9B9"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />

    <CheckBox
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="할인카드 있음(10%할인)" />

    <Button
        android:onClick="onResult"
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="#CDC9C9"
        android:text="총 금액 계산"
        android:textColorHint="#B5C6C4C4"
        app:rippleColor="#8AD5D5D6" />

    <TextView
        android:id="@+id/txtCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문개수 : "
        android:textColor="#0A2AF8"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="할인금액 : "
        android:textColor="#51DA32"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제금액 : "
        android:textColor="#F44336"
        android:textSize="16sp" />

</LinearLayout>